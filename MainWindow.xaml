<Window x:Class="MorseKeyer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MorseKeyer"
        mc:Ignorable="d"
        Title="Pengo VKeyer" Height="450" Width="800">
    <Grid>
        <Button Content="Key" HorizontalAlignment="Left" Height="230" Margin="110,159,0,0" VerticalAlignment="Top" Width="230" Click="Button_Click" MouseDown="Button_MouseDown" MouseUp="Button_MouseUp" MouseLeave="Button_MouseLeave"/>
        <ComboBox Name="MidiSelect" HorizontalAlignment="Left" Margin="95,67,0,0" VerticalAlignment="Top" Width="525" Height="32" SelectionChanged="MidiSelect_SelectionChanged" />
        <TextBox Name="DebugText" HorizontalAlignment="Left" Height="230" Margin="420,159,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
